<div class="row">
    <div class="container mx-auto col-md-5 mt-5">
        <div class="card text-center mx-auto mt-5">
            <div class="card-header">
                <h1>Dobles verificaciones</h1>
            </div>
            <div class="card-body">

                <form action="/profile/dobles_verificaciones" class="" method="POST" class="form-control">
                    <input type="text" name="dominio" placeholder="Introduce el dominio" class="form-control mb-2">
                        {{#if dominio}}
                                <input type="text" name="dominio" placeholder="Introduce el dominio" class="form-control mb-2"
                        value="{{dominio}}">
            
                        {{/if}}

                    {{#if users}}

                    {{#each users}}
                    <div class="input-group mb-2">
                        <input type="text" class="form-control" value={{this}}>
                        <div class="input-group-append">
                            <span class="input-group-text"><a href="/profile/dobles_verificaciones/{{this}}">Activar</a></span>
                        </div>
                    </div>
                    {{/each}}
                    {{/if}}
                    <input type="submit" class="form-control mb-2">
                </form>




            </div>
        </div>


    </div>
</div>