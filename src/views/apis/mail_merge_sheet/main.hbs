<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card mx-auto text-center">
                <div class="card-header">
                    <div class="h3">Personalizar mail merge</div>

                </div>
                <div class="card-body">
                    <form method="post" action="/profile/mail_merge_sheet">
                        <div class="input-group">
                            <div class="input-group-prepend">
                            </div>
                            <input type="text" id="dominio" name="dominio" class="form-control" placeholder="Introduce el dominio"
                                required>
                        </div>
                        <br>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="seeSheetId"><i class="fas fa-eye" style="cursor:pointer;"></i></span>
                            </div>
                            <input type="text" id="sheetId" name="sheetId" class="form-control" placeholder="Introduce el id de la sheet..."
                                required>
                        </div>

                        <div class="input-group">
                          
                            <input type="text" id="remitente" name="remitente" class="form-control" placeholder="Introduce el remitente..."
                                required>
                        </div>


                        <input type="submit" value="Generar">
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>